      <!-- Bá»™ lá»c -->
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 bg-white p-4 rounded-xl shadow">
        <div>
          <label class="font-semibold">ThÃ¡ng</label>
          <select id="month" onchange="updateBatchesAndSalary()" class="w-full border p-2 rounded">
            <% for(let m=1; m <=12; m++) { %>
              <option value="<%= m %>">
